                                      <input type="txt" placeholder="Authorised Sign PAN" name="authPan"/>
                                    </div>
                                 </div> 
                         
                                      
                                      <div class = "sub-comb"> 
                                        <div class = "sub-heading">
                                            <h1>PAN owners name</h1>
                                            </div>
                                            <div class="input-class">
                                                
                                              <input type="txt" placeholder="PAN owners name" name="panOwner"/>
                                            </div>
                                          </div>  
